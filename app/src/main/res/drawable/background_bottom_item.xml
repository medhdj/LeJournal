<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_color" />
            <corners
                android:bottomLeftRadius="@dimen/shadow_radius"
                android:bottomRightRadius="@dimen/shadow_radius" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/shadow_width"
        android:left="@dimen/shadow_width"
        android:right="@dimen/shadow_width">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_article_item" />
            <corners
                android:bottomLeftRadius="@dimen/shadow_radius"
                android:bottomRightRadius="@dimen/shadow_radius" />
        </shape>
    </item>
</layer-list>