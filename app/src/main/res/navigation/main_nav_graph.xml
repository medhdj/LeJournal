<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/articleFeedFragment">

    <fragment
        android:id="@+id/articleFeedFragment"
        android:name="com.medhdj.lejournal.features.articles.ArticlesFeedFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_articles_feed">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.medhdj.lejournal.features.main.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/articleFeedFragment" />
    </fragment>
</navigation>